AWSTemplateFormatVersion: '2010-09-09'
Transform:
- AWS::Serverless-2016-10-31
Description: Adoption CloudFormation project
Resources:
  GetPets:
    Type: AWS::Serverless::Function
    Properties:
      FunctionName: getPets
      Handler: pet.getPets
      Runtime: python3.6
      CodeUri: s3://deploy-carlos/c4bbb46b53d030592ed67fef55f2da18
      Policies:
      - DynamoDBReadPolicy:
          TableName:
            Ref: MyTable
      Environment:
        Variables:
          ADOPTION_TABLE:
            Ref: MyTable
      Events:
        GetUsers:
          Type: Api
          Properties:
            RestApiId:
              Ref: MyAPI
            Path: /pets
            Method: GET
  PutPet:
    Type: AWS::Serverless::Function
    Properties:
      FunctionName: updatePet
      Handler: pet.updatePet
      Runtime: python3.6
      CodeUri: s3://deploy-carlos/c4bbb46b53d030592ed67fef55f2da18
      Policies:
      - DynamoDBWritePolicy:
          TableName:
            Ref: MyTable
      Environment:
        Variables:
          ADOPTION_TABLE:
            Ref: MyTable
      Events:
        GetUsers:
          Type: Api
          Properties:
            RestApiId:
              Ref: MyAPI
            Path: /pets/{petId}
            Method: PUT
  MyAPI:
    Type: AWS::Serverless::Api
    Properties:
      Name: husky-api
      StageName: prod
      DefinitionBody:
        Fn::Transform:
          Name: AWS::Include
          Parameters:
            Location: s3://deploy-carlos/50b735e521fd037f0716690a483c8391
  MyTable:
    Type: AWS::DynamoDB::Table
    Properties:
      TableName: animal-adoption-table
      ProvisionedThroughput:
        ReadCapacityUnits: 5
        WriteCapacityUnits: 5
      KeySchema:
      - AttributeName: pk
        KeyType: HASH
      - AttributeName: sk
        KeyType: RANGE
      AttributeDefinitions:
      - AttributeName: pk
        AttributeType: S
      - AttributeName: sk
        AttributeType: S
